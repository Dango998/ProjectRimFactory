    <prerequisites>
      <li>PRFMachineLearning</li>
    </prerequisites>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>4</researchViewX>
    <researchViewY>3</researchViewY>
  </ResearchProjectDef>
  
  <ResearchProjectDef>
    <defName>PRFDrones</defName>
