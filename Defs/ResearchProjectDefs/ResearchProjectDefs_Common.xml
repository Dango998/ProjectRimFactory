<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Tier 1 -->
  <ResearchProjectDef>
    <defName>AutomationBasics</defName>
    <label>Automation basics</label>
    <techLevel>Industrial</techLevel>
    <baseCost>1000</baseCost>
    <description>Learn the very basics of automation and mechanisms, the gateway to an industrial colony.</description>
    <prerequisites>
      <li>Machining</li>
      <li>MicroelectronicsBasics</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>0</researchViewX>
    <researchViewY>3</researchViewY>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>PRFMachineLearning</defName>
    <label>Machine learning</label>
    <techLevel>Industrial</techLevel>
    <baseCost>2000</baseCost>
    <description>Teach machines how to improve their abilities by themselves.</description>
    <prerequisites>
      <li>AutomationBasics</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
	<requiredResearchFacilities><li>MultiAnalyzer</li></requiredResearchFacilities>
    <tab>Automation</tab>
    <researchViewX>3</researchViewX>
    <researchViewY>3</researchViewY>
  </ResearchProjectDef>
  
  <!-- Tier 2 -->
  <ResearchProjectDef>
    <defName>PRFGoldbachConjecture</defName>
    <label>Goldbach's conjecture</label>
    <techLevel>Spacer</techLevel>
    <baseCost>1500</baseCost>
    <description>"Any even integer greater than or equal to 4 can be formed from the sum of 2 prime numbers."\nUnlocks a new array of research projects.</description>
    <prerequisites>
      <li>PRFMachineLearning</li>
    </prerequisites>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>4</researchViewX>
    <researchViewY>3</researchViewY>
  </ResearchProjectDef>
  
  <ResearchProjectDef>
    <defName>PRFDrones</defName>
    <label>Drones</label>
    <techLevel>Spacer</techLevel>
    <baseCost>2000</baseCost>
    <description>Learn how to create independent target-specific flying AI-powered devices.</description>
    <prerequisites>
      <li>PRFGoldbachConjecture</li>
    </prerequisites>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>5</researchViewX>
    <researchViewY>2</researchViewY>
  </ResearchProjectDef>
  
  <ResearchProjectDef>
    <defName>PRFQuantumComputing</defName>
    <label>Quantum computing</label>
    <techLevel>Spacer</techLevel>
    <baseCost>2000</baseCost>
    <description>Learn how to create quantum computers to aid in research projects.</description>
    <prerequisites>
      <li>PRFGoldbachConjecture</li>
      <li>PaperclipProduction</li>
    </prerequisites>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>5</researchViewX>
    <researchViewY>3</researchViewY>
  </ResearchProjectDef>
  
  <ResearchProjectDef>
    <defName>PRFAtomicReconstruction</defName>
    <label>Atomic reconstruction</label>
    <techLevel>Spacer</techLevel>
    <baseCost>2000</baseCost>
    <description>Allows colonists to turn paperclips into raw materials.</description>
    <prerequisites>
      <li>PRFGoldbachConjecture</li>
      <li>PaperclipProduction</li>
    </prerequisites>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>5</researchViewX>
    <researchViewY>4</researchViewY>
  </ResearchProjectDef>
  
  <ResearchProjectDef>
    <defName>PRFNanoMaterials</defName>
    <label>Nano-materials</label>
    <techLevel>Spacer</techLevel>
    <baseCost>2500</baseCost>
    <description>Create new materials by manipulating the molecular structure of paperclips.</description>
    <prerequisites>
      <li>PRFAtomicReconstruction</li>
    </prerequisites>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>6</researchViewX>
    <researchViewY>5</researchViewY>
  </ResearchProjectDef>
  
  <ResearchProjectDef>
    <defName>PRFEdiblesSynthesis</defName>
    <label>edibles synthesis</label>
    <techLevel>Spacer</techLevel>
    <baseCost>2500</baseCost>
    <description>Create foods by manipulating the molecular structure of paperclips.</description>
    <prerequisites>
      <li>PRFAtomicReconstruction</li>
    </prerequisites>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>6</researchViewX>
    <researchViewY>4</researchViewY>
  </ResearchProjectDef>
  
  <ResearchProjectDef>
    <defName>PRFManufacturablesProduction</defName>
    <label>manufacturables production</label>
    <techLevel>Spacer</techLevel>
    <baseCost>3000</baseCost>
    <description>Allows colonists to also convert paperclips into items in the "manufactured" category.</description>
    <prerequisites>
      <li>PRFAtomicReconstruction</li>
    </prerequisites>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>7</researchViewX>
    <researchViewY>4</researchViewY>
  </ResearchProjectDef>
  
  <ResearchProjectDef>
    <defName>PRFAIPersonaProduction</defName>
    <label>AI persona production</label>
    <techLevel>Spacer</techLevel>
    <baseCost>4250</baseCost>
    <description>Allows colonists to fuse weak AI cores to make an AI persona core.</description>
    <prerequisites>
      <li>PRFQuantumComputing</li>
      <li>PRFAtomicReconstruction</li>
      <li>PRFDrones</li>
    </prerequisites>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>6</researchViewX>
    <researchViewY>3</researchViewY>
  </ResearchProjectDef>
  
  <ResearchProjectDef>
    <defName>PRFOrdoDataRummaging</defName>
    <label>Ordo data rummaging</label>
    <techLevel>Spacer</techLevel>
    <baseCost>10000</baseCost>
    <description>The AI research bench has detected a scrambled radio signal originating from deep within the planet, broadcasting records of the Ordo Historia. Unscramble the signal and search through the records in the hopes of uncovering more technology.</description>
    <prerequisites>
      <li>PRFAIPersonaProduction</li>
    </prerequisites>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>7</researchViewX>
    <researchViewY>3</researchViewY>
  </ResearchProjectDef>
</Defs>
