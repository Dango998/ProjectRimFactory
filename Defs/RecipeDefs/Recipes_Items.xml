          </categories>
          <exceptedThingDefs>
            <li>Paperclip</li>
          </exceptedThingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Root</li>
      </categories>
      <exceptedThingDefs>
        <li>Paperclip</li>
      </exceptedThingDefs>
    </fixedIngredientFilter>
    <allowMixingIngredients>true</allowMixingIngredients>
    <products> <!-- Products are handled in the Building_PaperclipFactory class -->
      <Paperclip>1</Paperclip>
