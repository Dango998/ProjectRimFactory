<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RecipeDef>
    <defName>MakeDataDisk</defName>
	<label>make data disk</label>
	<description>Make a roll of magnetic data tape.</description>
    <jobString>Making data disk.</jobString>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>5000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
	<products>
	  <RimFactory_Data_Disk>1</RimFactory_Data_Disk>
	</products>
    <skillRequirements>
	  <Crafting>8</Crafting>
	</skillRequirements>
    <workSkill>Crafting</workSkill>
	<recipeUsers><li>TableMachining</li></recipeUsers>
	<researchPrerequisite>MagneticTape</researchPrerequisite>
  </RecipeDef>
  <RecipeDef>
    <defName>MakePaperclips</defName>
	<label>make paperclips (take 1 item)</label>
	<description>Make paperclips, processing 1 item (10 for small volume) at once.</description>
    <jobString>Making paperclips.</jobString>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Drill</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>6</workAmount>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Root</li>
          </categories>
          <exceptedThingDefs>
            <li>Paperclip</li>
          </exceptedThingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Root</li>
      </categories>
      <exceptedThingDefs>
        <li>Paperclip</li>
      </exceptedThingDefs>
    </fixedIngredientFilter>
    <allowMixingIngredients>true</allowMixingIngredients>
    <products> <!-- Products are handled in the Building_PaperclipFactory class -->
      <Paperclip>1</Paperclip>
    </products>
    <workSkill>Crafting</workSkill>
	<researchPrerequisite>PaperclipProduction</researchPrerequisite>
  </RecipeDef>
