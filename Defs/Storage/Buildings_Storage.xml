<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="PRFBuildingBase" Abstract="True">
    <defName>StockpileCrate</defName>
    <label>stockpile crate</label>
    <thingClass>ProjectRimFactory.Storage.Building_MassStorageUnit</thingClass>
    <graphicData>
      <texPath>Storage/Wood_Crate</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>150</pathCost>
    <blockWind>true</blockWind>
    <fillPercent>1.0</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToBuild>1000</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>A giant crate that can store 10 items. Items stored in the crate do not deteriorate.</description>
    <canOverlapZones>false</canOverlapZones>
    <size>(2,2)</size>
    <costList>
	  <WoodLog>80</WoodLog>
      <Steel>20</Steel>
    </costList>
	<building>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <fixedStorageSettings>
        <priority>Preferred</priority>
        <filter>
          <categories>
            <li>Root</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Preferred</priority>
        <filter>
          <categories>
            <li>Foods</li>
			<li>Manufactured</li>
			<li>ResourcesRaw</li>
			<li>Items</li>
			<li>Art</li>
			<li>Weapons</li>
			<li>Apparel</li>
			<li>BodyParts</li>
          </categories>
        </filter>
      </defaultStorageSettings>
	</building>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Automation</designationCategory>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <designationHotKey>Misc3</designationHotKey>
    <constructEffect>ConstructWood</constructEffect>
    <researchPrerequisites>
      <li>AutomationBasics</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
	<inspectorTabs>
      <li>ITab_Storage</li>
	</inspectorTabs>
	<modExtensions>
	  <li Class="ProjectRimFactory.Storage.Editables.DefModExtension_MassStorage">
	    <limit>10</limit>
	  </li>
	</modExtensions>
  </ThingDef>
